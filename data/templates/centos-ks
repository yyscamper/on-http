<% if( typeof kvm !== 'undefined' ) { %>
    <% if (version === "6.5") { %>
        kvm
        virt-manager
        libvirt
        libvirt-python
        python-virtinst
    <% } else { %>
        @virtualization-hypervisor
        @virtualization-client
